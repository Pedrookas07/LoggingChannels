# Configurações do Sistema de Logging

# Arquivo onde os logs serão salvos
LOG_FILE=logs/app.log

# Nível mínimo de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# URL do webhook do Slack para envio de logs
# Obtenha em: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Canal do Slack onde os logs serão enviados
SLACK_CHANNEL=#logs

# Configurações de envio automático para Slack
SEND_WARNINGS_TO_SLACK=true
SEND_ERRORS_TO_SLACK=true